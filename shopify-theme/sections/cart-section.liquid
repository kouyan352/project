<script>
document.addEventListener('DOMContentLoaded', function() {
  const cartForm = document.getElementById('cart-form');
  if (!cartForm) return;

  // ãƒ‡ãƒãƒƒã‚°: ã‚«ãƒ¼ãƒˆã®çŠ¶æ…‹ã‚’ãƒ­ã‚°å‡ºåŠ›
  console.log('Cart page loaded');
  console.log('Cart items count:', document.querySelectorAll('.cart-item').length);
  
  // ã‚«ãƒ¼ãƒˆAPIã§å®Ÿéš›ã®çŠ¶æ…‹ã‚’ç¢ºèª
  fetch('/cart.js')
    .then(res => res.json())
    .then(cart => {
      console.log('Actual cart from API:', cart);
      console.log('Item count:', cart.item_count);
      if (cart.items) {
        cart.items.forEach((item, idx) => {
          console.log(`Item ${idx + 1}:`, {
            title: item.title,
            quantity: item.quantity,
            price: item.price,
            line_price: item.line_price
          });
        });
      }
    });

  // æ•°é‡å¤‰æ›´ãƒœã‚¿ãƒ³
  document.querySelectorAll('.quantity-plus, .quantity-minus').forEach(btn => {
    btn.addEventListener('click', function() {
      const line = this.dataset.line;
      const input = document.querySelector(`.quantity-input[data-line="${line}"]`);
      const currentValue = parseInt(input.value) || 1;
      
      if (this.classList.contains('quantity-plus')) {
        input.value = Math.min(currentValue + 1, 99);
      } else {
        input.value = Math.max(currentValue - 1, 0);
      }
      
      console.log(`Quantity changed for line ${line}: ${input.value}`);
      
      // è¡¨ç¤ºã‚’æ›´æ–°
      updateLineItemPrice(input);
      updateCartTotal();
    });
  });

  // æ•°é‡å…¥åŠ›ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã®ç›´æ¥å¤‰æ›´
  document.querySelectorAll('.quantity-input').forEach(input => {
    input.addEventListener('change', function() {
      const value = parseInt(this.value) || 0;
      this.value = Math.max(0, Math.min(value, 99));
      console.log(`Input changed for line ${this.dataset.line}: ${this.value}`);
      updateLineItemPrice(this);
      updateCartTotal();
    });
  });

  // è¡Œã‚¢ã‚¤ãƒ†ãƒ ä¾¡æ ¼ã‚’æ›´æ–°ï¼ˆè¡¨ç¤ºã®ã¿ï¼‰
  function updateLineItemPrice(input) {
    const line = input.dataset.line;
    const itemPrice = parseInt(input.dataset.itemPrice) || 0;
    const quantity = parseInt(input.value) || 0;
    const lineTotal = itemPrice * quantity;
    
    const priceElement = document.querySelector(`.cart-item[data-line-item="${line}"] .cart-item-final-price`);
    if (priceElement) {
      priceElement.textContent = formatMoney(lineTotal);
    }
  }

  // ã‚«ãƒ¼ãƒˆåˆè¨ˆã‚’æ›´æ–°ï¼ˆè¡¨ç¤ºã®ã¿ï¼‰
  function updateCartTotal() {
    let total = 0;
    document.querySelectorAll('.quantity-input').forEach(input => {
      const itemPrice = parseInt(input.dataset.itemPrice) || 0;
      const quantity = parseInt(input.value) || 0;
      total += itemPrice * quantity;
    });
    
    const subtotalElement = document.querySelector('.cart-subtotal');
    const totalElement = document.querySelector('.cart-total-price');
    
    if (subtotalElement) {
      subtotalElement.textContent = formatMoney(total);
    }
    if (totalElement) {
      totalElement.textContent = formatMoney(total);
    }
  }

  // é‡‘é¡ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ
  function formatMoney(cents) {
    const yen = Math.floor(cents / 100);
    return 'Â¥' + yen.toLocaleString('ja-JP');
  }

  // å‰Šé™¤ãƒœã‚¿ãƒ³ - Fetch APIã§å‰Šé™¤
  document.querySelectorAll('.remove-item-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      if (!confirm('ã“ã®å•†å“ã‚’å‰Šé™¤ã—ã¾ã™ã‹ï¼Ÿ')) return;
      
      const line = this.dataset.line;
      console.log(`Removing item at line ${line}`);
      
      btn.disabled = true;
      btn.style.opacity = '0.5';
      
      // Fetch APIã§å‰Šé™¤ï¼ˆquantity = 0ã«è¨­å®šï¼‰
      fetch('/cart/change.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify({
          line: parseInt(line),
          quantity: 0
        })
      })
      .then(res => res.json())
      .then(cart => {
        console.log('Item removed, new cart:', cart);
        // ãƒšãƒ¼ã‚¸ã‚’ãƒªãƒ­ãƒ¼ãƒ‰ã—ã¦æœ€æ–°ã®ã‚«ãƒ¼ãƒˆçŠ¶æ…‹ã‚’è¡¨ç¤º
        window.location.reload();
      })
      .catch(error => {
        console.error('Error removing item:', error);
        alert('å‰Šé™¤ã«å¤±æ•—ã—ã¾ã—ãŸã€‚ã‚‚ã†ä¸€åº¦ãŠè©¦ã—ãã ã•ã„ã€‚');
        btn.disabled = false;
        btn.style.opacity = '1';
      });
    });
  });

  // ã‚«ãƒ¼ãƒˆã‚’ç©ºã«ã™ã‚‹ - Fetch APIã§å…¨å‰Šé™¤
  const clearBtn = document.querySelector('.cart-clear-btn');
  if (clearBtn) {
    clearBtn.addEventListener('click', function() {
      if (!confirm('ã‚«ãƒ¼ãƒˆå†…ã®å…¨ã¦ã®å•†å“ã‚’å‰Šé™¤ã—ã¦ã‚‚ã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ')) return;
      
      console.log('Clearing entire cart');
      clearBtn.disabled = true;
      clearBtn.textContent = 'å‰Šé™¤ä¸­...';
      
      // å…¨å•†å“ã®æ•°é‡ã‚’0ã«è¨­å®š
      const updates = {};
      document.querySelectorAll('.quantity-input').forEach((input, index) => {
        updates[index + 1] = 0;
      });
      
      fetch('/cart/update.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
