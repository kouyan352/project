{% comment %}
  Opening Animation Section
  シンプル版：枯れた植物 → 元気な小さな観葉植物
{% endcomment %}
<div id="opening-animation" class="opening-animation">
  <div class="animation-container">
    <!-- シンプルな2シーン：枯れた植物 → 元気な小さな植物 -->
    <div class="cinematic-scene">
      <!-- Scene 1: 枯れた植物 -->
      <div class="scene-layer scene-1">
        <div class="plant-simple wilted">
          <div class="pot"></div>
          <div class="stem wilted"></div>
          <div class="leaves">
            <div class="leaf leaf-1 wilted"></div>
            <div class="leaf leaf-2 wilted"></div>
            <div class="leaf leaf-3 wilted"></div>
          </div>
        </div>
        <div class="worry-text">元気がない...</div>
      </div>

      <!-- Scene 2: 元気な小さな観葉植物 -->
      <div class="scene-layer scene-2">
        <div class="final-scene">
          <!-- 小さな観葉植物（小鉢） -->
          <div class="small-plant">
            <div class="small-pot"></div>
            <div class="small-stem"></div>
            <div class="small-leaves">
              <div class="small-leaf small-leaf-1"></div>
              <div class="small-leaf small-leaf-2"></div>
              <div class="small-leaf small-leaf-3"></div>
              <div class="small-leaf small-leaf-4"></div>
              <div class="small-leaf small-leaf-5"></div>
            </div>
            <!-- 元気の輝き -->
            <div class="glow-effect"></div>
          </div>
          
          <!-- キラキラエフェクト -->
          <div class="sparkles">
            <div class="sparkle">✨</div>
            <div class="sparkle">✨</div>
            <div class="sparkle">✨</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Skip Button -->
    <button class="skip-animation" onclick="skipAnimation()">
      スキップ
    </button>
  </div>
</div>

<style>
/* Simple Opening Animation */
.opening-animation {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: radial-gradient(ellipse at center, #2a2a2a 0%, #1a1a1a 100%);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
  transition: opacity 1s ease;
}

.opening-animation.fade-out {
  opacity: 0;
  pointer-events: none;
}

.animation-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Scene Management */
.cinematic-scene {
  position: relative;
  width: 100%;
  height: 100%;
}

.scene-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(1.1);
  transition: opacity 1.2s ease-in-out, transform 1.5s ease-out;
}

.scene-layer.active {
  opacity: 1;
  transform: scale(1);
}

/* Scene 1: Wilted Plant */
.scene-1 {
  flex-direction: column;
  gap: 2rem;
}

.plant-simple {
  position: relative;
  width: 200px;
  height: 300px;
}

.pot {
  width: 100px;
  height: 70px;
  background: linear-gradient(135deg, #8b4513 0%, #a0522d 100%);
  border-radius: 0 0 18px 18px;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.pot::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 110px;
  height: 18px;
  background: #a0522d;
  border-radius: 10px;
}

.stem {
  position: absolute;
  bottom: 70px;
  left: 50%;
  transform: translateX(-50%);
  width: 6px;
  height: 120px;
  background: #4a7c59;
  border-radius: 3px;
  transition: all 0.8s ease;
}

.stem.wilted {
  background: #8b7355;
  height: 80px;
  transform: translateX(-50%) rotate(-15deg);
}

.leaves {
  position: absolute;
  bottom: 150px;
  left: 50%;
  transform: translateX(-50%);
  width: 200px;
  height: 150px;
}

.leaf {
  position: absolute;
  width: 45px;
  height: 60px;
  background: #4a7c59;
  border-radius: 50% 0;
  transition: all 0.8s ease;
  transform-origin: bottom center;
}

.leaf.wilted {
  background: #8b7355;
  opacity: 0.7;
}

.leaf.leaf-1 {
  bottom: 60px;
  left: 50%;
  transform: translateX(-50%) rotate(-45deg);
}

.leaf.leaf-2 {
  bottom: 45px;
  left: 20%;
  transform: rotate(-80deg);
}

.leaf.leaf-3 {
  bottom: 45px;
  right: 20%;
  transform: rotate(10deg);
}

.worry-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.5rem;
  font-weight: 500;
  text-align: center;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
}

/* Scene 2: 元気な小さな観葉植物 */
.scene-2 {
  flex-direction: column;
}

.final-scene {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 小さな観葉植物 */
.small-plant {
  position: relative;
  width: 120px;
  height: 180px;
  animation: plantAppear 1s ease-out;
}

/* 小鉢 */
.small-pot {
  width: 70px;
  height: 50px;
  background: linear-gradient(135deg, 
    #8b4513 0%, 
    #a0522d 50%, 
    #8b4513 100%);
  border-radius: 0 0 15px 15px;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 
    0 8px 20px rgba(0, 0, 0, 0.4),
    inset 0 2px 4px rgba(255, 255, 255, 0.2),
    inset 0 -2px 4px rgba(0, 0, 0, 0.3);
}

.small-pot::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 75px;
  height: 12px;
  background: linear-gradient(135deg, 
    #a0522d 0%, 
    #c46d3a 50%, 
    #a0522d 100%);
  border-radius: 8px;
  box-shadow: 
    0 2px 5px rgba(0, 0, 0, 0.3),
    inset 0 1px 2px rgba(255, 255, 255, 0.3);
}

/* 小さな茎 */
.small-stem {
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
  width: 5px;
  height: 70px;
  background: linear-gradient(to top, 
    #2d5f3f 0%, 
    #2ecc71 100%);
  border-radius: 3px;
  box-shadow: 
    0 0 10px rgba(46, 204, 113, 0.4),
    inset 1px 0 2px rgba(255, 255, 255, 0.3),
    inset -1px 0 2px rgba(0, 0, 0, 0.2);
  animation: stemGrow 0.8s ease-out 0.3s backwards;
}

/* 小さな葉っぱ */
.small-leaves {
  position: absolute;
  bottom: 90px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 90px;
}

.small-leaf {
  position: absolute;
  width: 32px;
  height: 45px;
  background: linear-gradient(135deg, 
    #2ecc71 0%, 
    #27ae60 100%);
  border-radius: 50% 0;
  transform-origin: bottom center;
  box-shadow: 
    0 0 15px rgba(46, 204, 113, 0.5),
    inset 2px 2px 4px rgba(255, 255, 255, 0.3),
    inset -2px -2px 4px rgba(0, 0, 0, 0.2);
  animation: leafGrow 0.6s ease-out backwards, leafSway 3s ease-in-out infinite;
}

.small-leaf::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 1px;
  background: rgba(255, 255, 255, 0.5);
  transform: translateY(-50%) rotate(-30deg);
}

.small-leaf-1 {
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%) rotate(-45deg);
  animation-delay: 0.4s, 0s;
}

.small-leaf-2 {
  bottom: 30px;
  left: 20%;
  transform: rotate(-75deg);
  animation-delay: 0.5s, 0.2s;
}

.small-leaf-3 {
  bottom: 30px;
  right: 20%;
  transform: rotate(15deg);
  animation-delay: 0.6s, 0.4s;
}

.small-leaf-4 {
  bottom: 50px;
  left: 25%;
  transform: rotate(-60deg);
  animation-delay: 0.7s, 0.6s;
}

.small-leaf-5 {
  bottom: 50px;
  right: 25%;
  transform: rotate(30deg);
  animation-delay: 0.8s, 0.8s;
}

/* 元気の輝き */
.glow-effect {
  position: absolute;
  top: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 140px;
  height: 140px;
  background: radial-gradient(circle, 
    rgba(46, 204, 113, 0.3) 0%, 
    transparent 70%);
  border-radius: 50%;
  animation: glowPulse 2s ease-in-out infinite;
}

/* キラキラエフェクト */
.sparkles {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  width: 300px;
  height: 300px;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  font-size: 2rem;
  animation: sparkleFloat 2s ease-in-out infinite;
  filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.8));
}

.sparkle:nth-child(1) {
  top: 20%;
  left: 25%;
  animation-delay: 0s;
}

.sparkle:nth-child(2) {
  top: 30%;
  right: 20%;
  animation-delay: 0.4s;
  font-size: 2.5rem;
}

.sparkle:nth-child(3) {
  top: 50%;
  left: 50%;
  animation-delay: 0.8s;
  font-size: 1.8rem;
}

/* Skip Button */
.skip-animation {
  position: fixed;
  bottom: 3rem;
  right: 3rem;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  padding: 0.75rem 2rem;
  border-radius: 30px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  z-index: 10001;
  letter-spacing: 0.05em;
}

.skip-animation:hover {
  background: rgba(0, 0, 0, 0.8);
  border-color: rgba(255, 255, 255, 0.6);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
}

/* Animations */
@keyframes leafSway {
  0%, 100% {
    transform: translateY(0) rotate(var(--rotation, 0deg));
  }
  50% {
    transform: translateY(-3px) rotate(calc(var(--rotation, 0deg) + 3deg));
  }
}

@keyframes sparkleFloat {
  0%, 100% {
    opacity: 0;
    transform: translateY(0) scale(0.8);
  }
  50% {
    opacity: 1;
    transform: translateY(-15px) scale(1.2);
  }
}

@keyframes plantAppear {
  0% {
    opacity: 0;
    transform: translateY(30px) scale(0.8);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes stemGrow {
  0% {
    height: 0;
  }
  100% {
    height: 70px;
  }
}

@keyframes leafGrow {
  0% {
    opacity: 0;
    transform: scale(0) rotate(var(--rotation, 0deg));
  }
  100% {
    opacity: 1;
    transform: scale(1) rotate(var(--rotation, 0deg));
  }
}

@keyframes glowPulse {
  0%, 100% {
    opacity: 0.6;
    transform: translateX(-50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translateX(-50%) scale(1.1);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .plant-simple {
    width: 150px;
    height: 230px;
  }
  
  .worry-text {
    font-size: 1.2rem;
  }
  
  .small-plant {
    width: 90px;
    height: 140px;
  }
  
  .small-pot {
    width: 55px;
    height: 40px;
  }
  
  .small-stem {
    height: 55px;
  }
  
  .skip-animation {
    bottom: 2rem;
    right: 2rem;
    padding: 0.6rem 1.5rem;
    font-size: 0.85rem;
  }
}
</style>

<script>
(function() {
  const animation = document.getElementById('opening-animation');
  if (!animation) return;
  
  // 初回訪問チェック
  const ANIMATION_VIEWED_KEY = 'greencare_opening_animation_viewed';
  const SHOW_ONLY_FIRST_VISIT = {{ section.settings.show_only_first_visit | default: false | json }};
  
  function hasViewedAnimation() {
    return localStorage.getItem(ANIMATION_VIEWED_KEY) === 'true';
  }
  
  function markAnimationAsViewed() {
    localStorage.setItem(ANIMATION_VIEWED_KEY, 'true');
  }
  
  if (SHOW_ONLY_FIRST_VISIT && hasViewedAnimation()) {
    animation.style.display = 'none';
    document.body.style.overflow = 'auto';
    return;
  }
  
  // シンプルな2シーンアニメーション
  const scenes = document.querySelectorAll('.scene-layer');
  const totalDuration = 4000; // 合計4秒に短縮
  
  function startAnimation() {
    document.body.style.overflow = 'hidden';
    
    // Scene 1: 枯れた植物 (0s-2s)
    setTimeout(() => {
      scenes[0].classList.add('active');
    }, 0);
    
    // Scene 2: 元気な植物 (2s-4s)
    setTimeout(() => {
      scenes[0].classList.remove('active');
      scenes[1].classList.add('active');
    }, 2000);
    
    // アニメーション終了
    setTimeout(() => {
      endAnimation();
    }, totalDuration);
  }

  function endAnimation() {
    animation.classList.add('fade-out');
    
    if (SHOW_ONLY_FIRST_VISIT) {
      markAnimationAsViewed();
    }
    
    setTimeout(() => {
      animation.style.display = 'none';
      document.body.style.overflow = 'auto';
    }, 1000);
  }

  // スキップ機能
  window.skipAnimation = function() {
    endAnimation();
  };

  // Escapeキーでスキップ
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      window.skipAnimation();
    }
  });

  // アニメーション開始
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', startAnimation);
  } else {
    startAnimation();
  }
})();
</script>

{% schema %}
{
  "name": "Opening Animation",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_animation",
      "label": "オープニングアニメーションを有効化",
      "default": true,
      "info": "アニメーションの表示/非表示を切り替えます"
    },
    {
      "type": "checkbox",
      "id": "show_only_first_visit",
      "label": "初回訪問時のみ表示",
      "default": false,
      "info": "オンにすると、ユーザーの初回訪問時のみアニメーションを表示します"
    }
  ],
  "presets": [
    {
      "name": "Opening Animation"
    }
  ]
}
{% endschema %}
